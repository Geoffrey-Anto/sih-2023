{
  "manifest_version": 3,
  "name": "DOM Accessor",
  "version": "1.0",
  "description": "SIH 2023",
  "default_locale": "en",
  "host_permissions": [
    "https://mkp.gem.gov.in/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mkp.gem.gov.in/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "chrome://favicon/",
    "http://*/*",
    "https://*/*"
  ]
}