{
  "manifest_version": 3,
  "name": "SIH 2023",
  "version": "1.0",
  "description": "SIH 2023",
  "default_locale": "en",
  "host_permissions": ["https://mkp.gem.gov.in/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://mkp.gem.gov.in/*"],
      "js": ["popup.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "webNavigation",
    "tabs",
    "chrome://favicon/",
    "http://*/*",
    "https://*/*"
  ]
}
